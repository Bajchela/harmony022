@model  List<Harmony.Models.prikaziPretragu>



@Html.Partial("PretragaHome");

<style>
    .card{
        margin-left: 60px;
        margin-top: 15px; 
        float: left;
        width: 15em;
        background-repeat: no-repeat;
        background-size: contain;         
        opacity:0.7;
        }
    .card:hover{
        opacity:1.0;
    }
</style>
<body>



    @for (int i = 0; i < Model.Count; i++)
    {


        <row>

            <column>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@Model.ElementAt(i).Slika" alt="Card image cap" style="margin-bottom: -45px">
                    <div class="card-body">
                        <h3 class="card-title text-center">@Model.ElementAt(i).Lokacija,  @Model.ElementAt(i).Mesto  @Model.ElementAt(i).Drzava</h3>

                        <p class="card-text text-center"><strong>Kvadratura: @Model.ElementAt(i).Kvadratura m2</strong> <br /><strong>Cena: @Model.ElementAt(i).Cena Eura</strong></p>


                        <a href="#" class="btn center-block btn-primary " style="margin-left:15px">Detaljnije</a>
                    </div>
                </div>

            </column>


        </row>
    }

</body>
